<resources>

    <!-- Base application theme. -->
    <style name="AwesomeTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#264A5C</item>
        <item name="android:titleTextStyle">@style/AwesomeTheme.MyActionBar.TitleTextStyle</item>
    </style>
    <style name="AwesomeTheme.MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>